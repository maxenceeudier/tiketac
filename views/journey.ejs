<!DOCTYPE html>
<html>

<head>

  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

  <%- include('./partials/navbar'); %>

  <div id="section">
    <div id="bloc">
      <div class="container">

        <h2 style="color:white" class="row mb-5">Tickets available on <%= dateFormat(journey[0].date) %> :</h2>
        <% for (let i=0; i<journey.length;i++){ %>
        <div class="cards row mb-3">
          <h3 class="col-12 col-sm-4"><%= journey[i].departure %>/ <%= journey[i].arrival %></h3>
          <p class="col-12 col-sm-4">train departure at : <%= journey[i].departureTime %> pm</p>
          <div class="okPrice col-6 col-sm-4 ">
            <h3 class="price"><%= journey[i].price %>â‚¬</h3>
            <a href="/basket?cities=<%= journey[i].departure %>/<%= journey[i].arrival %>&date=<%= dateFormatYear(journey[0].date) %>&hour=<%= journey[i].departureTime %>&price=<%= journey[i].price %>"><button class="btn btn-danger">ok</button></a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>




  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>
</body>

</html>