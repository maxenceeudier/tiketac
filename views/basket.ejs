<!DOCTYPE html>
<html>

<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body1>

  <%- include('./partials/navbar'); %>

    <div id="container-tab">

      <div id="mytickets">
        <h4 class="titleForm mb-4 text-white">My Tickets :</h4>
      </div>

      <div id="bloc-tab">
        <!-- TABLEAU -->
        <table id="journey-list" class="table table-borderless table-light" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>N°</th>
              <th>Journey</th>
              <th>Date</th>
              <th>Departure time</th>
              <th>User name</th>
              <th>Price</th>
            </tr>
          </thead>
          
          <tbody id="tbody">
            <% 
            var totalCmd = 0;
              for (let i=0; i<dataJourney.length;i++){ %>
            <tr>
              <td id="col1"><%=i+1%></td>
              <td><%= dataJourney[i].journey %></td>
              <td><%= dataJourney[i].date %></td>
              <td><%= dataJourney[i].departureTime %></td>
              <td><%= dataJourney[i].passenger %></td>
              <td><%= dataJourney[i].price %> €</td>
            </tr>
          </tbody>
          <% totalCmd += dataJourney[i].price
          }%>
          <tfoot class="table-danger">
            <tr>
              <th>Total</th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th><%=totalCmd%> €</th>
            </tr>
          </tfoot>
        </table>

      </div>

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-danger">Confirm</button>
      </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
      </script>
</body1>

</html>