<!DOCTYPE html>
<html>

<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
  <script src="jquery-3.5.1.min.js"></script>

</head>

<body1>

  <%- include('./partials/navbar'); %>

  <div id="container-tab">

    <div id="mytickets">
      <h4 class="titleForm mb-4 text-white">My Tickets :</h4>
    </div>
    <% if (empty){ %>
    <p class="empty">There is no journey in the basket</p>
    <% }else{ %>

    <div id="bloc-tab">
      <!-- TABLEAU -->
      <table id="journey-list" class="table table-borderless table-light" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>N°</th>
            <th>Journey</th>
            <th>Date</th>
            <th>Departure time</th>
            <th>Passenger</th>
            <th>Price</th>
            <th>Delete</th>
          </tr>
        </thead>

        <tbody>
          <% 
            var totalCmd = 0;
              for (let i=0; i<dataJourney.length;i++){ %>
          <tr id="tbody">
            <td id="col1"><%=i+1%></td>
            <td><%= dataJourney[i].journey %></td>
            <td><%= dataJourney[i].date %></td>
            <td><%= dataJourney[i].departureTime %></td>
            <td><%= dataJourney[i].passenger %></td>
            <td><%= dataJourney[i].price %> €</td>
            <td><a href="/delete-journey?position=<%=i%>"><button class="btn btn-outline-danger btn-sm" name="button"><i
                    class="far fa-trash-alt"></i></button></a> </td>
          </tr>
        </tbody>
        <% totalCmd += dataJourney[i].price
          }%>
        <tfoot class="table-danger">
          <tr>
            <th>Total</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th><%=totalCmd%> €</th>
            <th></th>
          </tr>
        </tfoot>
      </table>

    </div>

    <div class="d-flex justify-content-end">
      <a href="/lastTrips"><button type="submit" class="btn btn-danger">Confirm</button></a>
    </div>
    <div class="modal fade" id="#checkoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Paiement reussi</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h1>Bravo votre transaction a ete effectué !!</h1>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <a href="/home"><button type="button" class="btn btn-danger">Home</button></a>
          </div>
        </div>
      </div>
    </div>
    <% } %>

  </div>

  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script type="text/javascript">
    $(window).on('load', function() {
        $('#checkoutModal').modal('show');
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>
</body1>

</html>