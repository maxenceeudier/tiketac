<!DOCTYPE html>
<html>

<head>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    <%- include('./partials/navbar'); %>


    <div id="section">
        <div id="container">
            <div class="container">
                <h2 class="row mb-5" style="color:white">One-way ticket :</h2>
                <% if (journeyExist === false){ %>
                <h4 style="color:red">This journey doesn't exist </h4>
                <% } %>
                
                <form class="row mb-5 " action="/journey" method="POST">
                    <div class="col- col-md-3 offsetr-1 offsetr-md-0 ">
                        <input type="text" placeholder="From: Paris, Marseille ..." name="departure" class="form-control" required>
                    </div>
                    <div class="col-12 col-md-3 offsetr-1 offsetr-md-0">
                        <input type="text" placeholder="To: Lille, Nantes ..." name="arrival" class="form-control" required>
                    </div>
                    <div class="col-10 col-md-3 offsetr-1 offsetr-md-0">
                        <input type="date" name="date" class="form-control" required>
                    </div>
                    <div class="col-2 col-md-3 ml-2 offsetr-1 offsetr-md-0">
                        <button type="submit" class="btn btn-danger">Go</button>
                    </div>
                </form>
                <div class="img">
                    <img src="/images/landmark.png" alt="" width="300px" height="300px">
                </div>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>